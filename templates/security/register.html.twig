{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="h3 mb-3 font-weight-normal text-center">Créer un compte</h1>

                {% if form_errors(form) %}
                    <div class="alert alert-danger">
                        <strong>Erreur !</strong> Veuillez corriger les erreurs suivantes :
                        <ul>
                            {% for error in form_errors(form) %}
                                <li>{{ error.message }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}

                <form method="post" action="{{ path('app_register') }}" class="needs-validation" novalidate>
                    {{ form_start(form) }}

                    <div class="form-group">
                        {{ form_label(form.email, 'Email') }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre email', 'required': 'required'}}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.password, 'Mot de passe') }}
                        {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre mot de passe', 'required': 'required'}}) }}
                        {{ form_errors(form.password) }}
                    </div>

                    <div class="text-center mt-3"> <!-- Ajoute la classe text-center ici -->
                        <button type="submit" class="btn btn-lg btn-primary btn-block">
                            S'inscrire
                        </button>
                    </div>

                    <p class="mt-3 mb-0 text-center">
                        Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous</a>
                    </p>

                    {{ form_end(form) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}